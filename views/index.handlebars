<form action="/" method="POST">
  <div class="container">
    <input type="url" name="url" id="urlInput" placeholder="Input URL here" value="{{originalURL}}" required />
    <div class="short-zone">
      <button class="shorten " type="submit">Short!</button>
      <button type="reset" class="reset">reset</button>
    </div>
  </div>
</form>

{{#if shortURL}}
<div class=" result">
  <h3>Success! Please use this link:</h3>
  <div class="d-flex">
    <p id="generatedURL" class="col-sm-10">{{origin}}/{{shortURL}}</p>
    <button class="copy col-sm-2" onclick="copy()"><i class="fas fa-copy" </i></i></button>

  </div>

</div>

<script>
  function copy() {
    const URL = document.getElementById("generatedURL")
    navigator.clipboard.writeText(URL.innerText)
      .then(() => alert('copied'))
      .catch(error => console.log(error))
  }
</script>
{{else}}

{{/if}}